<%- include('layouts/header') -%>

    <div class="flex justify-center items-center">
        <div class="2xl:mx-auto 2xl:container lg:px-20 lg:py-16 md:py-12 md:px-6 py-9 px-4 w-96 sm:w-auto">
            <div role="main" class="flex flex-col items-center justify-center">
                <h1 class="text-4xl font-semibold leading-9 text-center text-gray-800 dark:text-gray-50">This Week Blogs
                </h1>
                <p
                    class="text-base leading-normal text-center text-gray-600 dark:text-white mt-4 lg:w-1/2 md:w-10/12 w-11/12">
                    If you're looking for random paragraphs, you've come to the right place. When a random word or a
                    random
                    sentence isn't quite enough</p>
            </div>
            <div class="lg:flex items-stretch md:mt-12 mt-8 gap-2">
                <% articles.forEach((article)=> { %>
                    <% const date=new Date(article.createdAt); %>
                        <% const niceDate=`${date.getDate()}/${date.getMonth() + 1}/${date.getFullYear()}`; %>
                            <div class="lg:w-1/2">
                                <div class="relative">
                                    <div>
                                        <p
                                            class="md:p-10 p-6 text-xs font-medium leading-3 text-white absolute top-0 right-0">
                                            <%= niceDate %>
                                        </p>
                                        <div class="absolute bottom-0 left-0 md:p-10 p-6">
                                            <h2 class="text-xl font-semibold 5 text-white">
                                                <%= article.heading %>
                                            </h2>
                                            <p class="text-base leading-4 text-white mt-2">
                                                <%= article.subHeading %>
                                            </p>
                                            <a href="/article/<%= article._id %>"
                                                class="focus:outline-none focus:underline flex items-center mt-4 cursor-pointer text-white hover:text-gray-200 hover:underline">
                                                <p class="pr-2 text-sm font-medium leading-none">Read More</p>
                                                <svg class="fill-stroke" width="16" height="16" viewBox="0 0 16 16"
                                                    fill="none" xmlns="http://www.w3.org/2000/svg">
                                                    <path d="M5.75 12.5L10.25 8L5.75 3.5" stroke="currentColor"
                                                        stroke-width="2" stroke-linecap="round"
                                                        stroke-linejoin="round" />
                                                </svg>
                                            </a>
                                        </div>
                                    </div>

                                    <% if (article.coverImage) { %>
                                        <img src="<%= publicUrl + article.coverImage %>" alt="Cover Image"
                                            class="cover-image w-full hidden sm:block" />
                                        <% } else { %>
                                            <img src="/images/no-image.jpg" alt="No Image"
                                                class="cover-image w-full hidden sm:block" />
                                            <% } %>
                                                <img class="w-full mt-4 sm:hidden"
                                                    src="https://i.ibb.co/6XYbN7f/Rectangle-29.png"
                                                    alt="sitting place" />
                                </div>
                            </div>
                            <% }) %>
            </div>
        </div>
    </div>

    <%- include('layouts/footer.ejs') %>